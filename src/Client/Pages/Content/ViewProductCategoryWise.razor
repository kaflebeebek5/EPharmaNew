@page "/ViewProducts/{Id}"
@attribute [AllowAnonymous]
<legend><h2><b>Product List</b></h2></legend>
<br />
<MudGrid Style="margin-bottom:2%">
     <MudItem xs="7"><p style="color:cornflowerblue"><b><h2>Shop by Products..........</h2></b></p></MudItem>
     <MudItem xs="5"><MudTextField T="string" Placeholder="Search......."></MudTextField> </MudItem>
</MudGrid>
<MudPaper>
    <MudGrid>
        @foreach (var items in _MedicineList)
        {
               <MudItem xs="2">
                    <MudPaper>
                        <MudAvatar Square="true" Style="height:147px;width:155px;margin-left:14%" Image="@items.ImagePath"></MudAvatar>
                         <MudText Style="margin-left:14%"><MudIconButton Link="@($"/Viewdetails/{@items.Id}")"><b>@items.Name</b></MudIconButton></MudText>
                         <MudText Style="margin-left:14%"><MudIconButton ><b>Rs. @items.SalePrice</b></MudIconButton></MudText>
                    </MudPaper>
                </MudItem>

