@page "/settings/tablesetup"
@attribute [Authorize(Policy = Permissions.TableSetup.View)]
@inject Microsoft.Extensions.Localization.IStringLocalizer<TableSetup> _localizer
@using EPharma.Application.Features.MasterTableSetup.Queries.GetAll
@using EPharma.Application.Features.TableSetup.Queries.GetAll

<style>
    .mud-table-container {
        overflow: auto;
    }
</style>

<HeroTitle Title="@_localizer["TableSetup"]" Description="@_localizer["Manage TableSetup."]" />
@if (!_loaded)
{
    <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
}
else
{
    <MudTable Hover="true" Elevation="25" Items="_tableDetailList" Filter="new Func<GetAllTableSetupResponse, bool>(Search)" @bind-tablesetup="_tablesetupList">
        <ToolBarContent>


            <div class="mr-3 xs-4" xs="" sm="6" md="4">
                <MudAutocomplete T="string" For="@(() => TableSetupCommand.TableName)" ValueChanged="((string s) => GetTableDetailsAsync(s))" Label="@_localizer["TableName"]" ResetValueOnEmptyText="true" SearchFunc="@SearchTable" Variant="Variant.Filled" ToStringFunc="@(i => _tablesetupList.FirstOrDefault(b => b.TableName == i)?.TableName ?? string.Empty)" OffsetY="true" AdornmentColor="Color.Primary" />
            </div>

            <div class="mr-3 xs-4" xs="4" sm="6" md="4">
                <MudButton DisableElevation Variant="Variant.Filled" Disabled="@(TableSetupCommand.TableName== null ? true:false)" Color="Color.Primary" OnClick="(() => InvokeModal())" StartIcon="@Icons.Material.Filled.Add" IconColor="Color.Surface">@_localizer["Create"]</MudButton>
            </div>
            <MudGrid>
                <MudItem xs="12" sm="6" md="4">
                    <MudButton DisableElevation Variant="Variant.Filled" OnClick="(() => GetTableDetailsAsync(TableSetupCommand.TableName))" StartIcon="@Icons.Material.Filled.Refresh" IconColor="Color.Surface" Color="Color.Secondary">@_localizer["Reload"]</MudButton>
                </MudItem>
                @if (_canSearchTableSetup)
                {
                    <MudTextField @bind-Value="_searchString" Immediate="true" Placeholder="@_localizer["Search for Table"]" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0 mb-3"></MudTextField>
                }
            </MudGrid>
            
            

        </ToolBarContent>
        <HeaderContent>
            <MudTh><MudTableSortLabel SortBy="new Func<GetAllTableSetupResponse, object>(x => x.Id)">@_localizer["Id"]</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortBy="new Func<GetAllTableSetupResponse, object>(x => x.Name)">@_localizer["Name"]</MudTableSortLabel></MudTh>
            <MudTh Style="text-align:right">@_localizer["Actions"]</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Id">@context.Id</MudTd>
            <MudTd DataLabel="Name">
                <MudHighlighter Text="@context.Name" HighlightedText="@_searchString" />
            </MudTd>
            <MudTd DataLabel="Actions" Style="text-align: right">
                @if (_canEditTableSetup || _canDeleteTableSetup)
                    {
                    <MudMenu Label="@_localizer["Actions"]" Variant="Variant.Filled" DisableElevation="true" EndIcon="@Icons.Filled.KeyboardArrowDown" IconColor="Color.Secondary" Direction="Direction.Left" OffsetX="true">
                        @if (_canEditTableSetup)
                            {
                            <MudMenuItem @onclick="@(() => InvokeModal(@context.Id,@TableSetupCommand.TableName))">@_localizer["Edit"]</MudMenuItem>
                            }
                        @if (_canDeleteTableSetup)
                            {
                            <MudMenuItem @onclick="@(() => Delete(@context.Id, @TableSetupCommand.TableName))">@_localizer["Delete"]</MudMenuItem>
                            }
                    </MudMenu>
                    }
                    else
                    {
                    <MudButton Variant="Variant.Filled"
                               DisableElevation="true"
                               StartIcon="@Icons.Material.Filled.DoNotTouch"
                               IconColor="Color.Secondary"
                               Size="Size.Small"
                               Color="Color.Surface">
                        @_localizer["No Allowed Actions"]
                    </MudButton>
                    }
            </MudTd>
        </RowTemplate>
        <PagerContent>
            <TablePager />
        </PagerContent>
    </MudTable>
}