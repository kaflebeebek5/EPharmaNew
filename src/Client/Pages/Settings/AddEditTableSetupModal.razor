@inject Microsoft.Extensions.Localization.IStringLocalizer<AddEditTableSetupModal> _localizer

<EditForm Model="@AddEditTableSetupModel" OnValidSubmit="SaveAsync">
    <FluentValidationValidator @ref="_fluentValidationValidator"/>
    <MudDialog>
        <TitleContent>
            @{ 
                if(AddEditTableSetupModel.Id == 0)
                    {
                        <MudText Typo="Typo.h6">
                            <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1"/>
                            @_localizer["Add Table"]
                        </MudText>
                    }
                    else
                    {
                        <MudText Typo="Typo.h6">
                            <MudIcon Icon="@Icons.Material.Filled.Update" Class="mr-3 mb-n1"/>
                            @_localizer["Update Table"]
                        </MudText>
                    }
            }
        </TitleContent>
        <DialogContent>
            <MudGrid>
                @if (AddEditTableSetupModel.Id != 0)
                {
                    <MudItem xs="12" md="3">
                        <MudTextField Disabled For="@(() => AddEditTableSetupModel.Id)" @bind-Value="AddEditTableSetupModel.Id" Label="@_localizer["Id"]" />
                    </MudItem>
                }
                <MudItem xs="12" md="3">
                    <MudTextField T="string" Disabled For="@(()=> AddEditTableSetupModel.TableName)" @bind-Value="AddEditTableSetupModel.TableName" Label="@_localizer["TableName"]" />
                </MudItem>
                <MudItem xs="12" md="3">
                    <MudTextField T="string" For="@(() => AddEditTableSetupModel.Name)" @bind-Value="AddEditTableSetupModel.Name" Label="@_localizer["Name"]" />
                </MudItem>

            </MudGrid>
        </DialogContent>
        <DialogActions>
            <MudButton DisableElevation Variant ="Variant.Filled" OnClick="Cancel">@_localizer["Cancel"]</MudButton>
            @if(AddEditTableSetupModel.Id != 0)
                    {
                        <MudButton DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Disabled="@(!Validated)" Color="Color.Secondary">@_localizer["Update"]</MudButton>
                    }
                    else
                    {
                        <MudButton DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Disabled="@(!Validated)" Color="Color.Success">@_localizer["Save"]</MudButton>
                    }
        </DialogActions>
    </MudDialog>

</EditForm>
