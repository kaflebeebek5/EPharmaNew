@inject Microsoft.Extensions.Localization.IStringLocalizer<AddEditDoctorSetup> _localizer

<EditForm Model="@AddEditDoctorModel" OnValidSubmit="SaveAsync">
    <FluentValidationValidator @ref="_fluentValidationValidator" />
    <MudDialog>
        <TitleContent>
            @{ if (AddEditDoctorModel.Id == 0)
                {
<MudText Typo="Typo.h6">
    <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
    @_localizer["Add Doctor"]
</MudText> }
else
{
<MudText Typo="Typo.h6">
    <MudIcon Icon="@Icons.Material.Filled.Update" Class="mr-3 mb-n1" />
    @_localizer["Update Doctor"]
</MudText> } }
        </TitleContent>
        <DialogContent>
            <MudGrid>
                @if (AddEditDoctorModel.Id != 0)
                {
            <MudItem xs="12" md="6">
                <MudTextField Disabled For="@(() => AddEditDoctorModel.Id)" Margin="Margin.Dense" @bind-Value="AddEditDoctorModel.Id" Label="@_localizer["Id"]" />
            </MudItem>}
                <MudItem xs="12" md="6">
                    <MudTextField T="string" Variant="Variant.Outlined" Margin="Margin.Dense" For="@(() => AddEditDoctorModel.Name)" @bind-Value="AddEditDoctorModel.Name" Label="@_localizer["Name"]" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField T="string" Variant="Variant.Outlined" Margin="Margin.Dense" For="@(() => AddEditDoctorModel.Address)" @bind-Value="AddEditDoctorModel.Address" Label="@_localizer["Address"]" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField T="string" Variant="Variant.Outlined" Margin="Margin.Dense" For="@(() => AddEditDoctorModel.Email)" @bind-Value="AddEditDoctorModel.Email" Label="@_localizer["Email"]" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField T="string" Variant="Variant.Outlined" Margin="Margin.Dense" For="@(() => AddEditDoctorModel.PhoneNumber)" @bind-Value="AddEditDoctorModel.PhoneNumber" Label="@_localizer["Phone Number"]" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField T="string" Variant="Variant.Outlined" Margin="Margin.Dense" For="@(() => AddEditDoctorModel.Specialist)" @bind-Value="AddEditDoctorModel.Specialist" Label="@_localizer["Specialist"]" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <GenericDropDown Variant="Variant.Outlined" InitialValue="@AddEditDoctorModel.GenderId.ToString()" Margin="Margin.Dense" ValueChanged="((id) => AddEditDoctorModel.GenderId=int.Parse(id))" TableName="Gender" LabelName="Gender"></GenericDropDown>
                </MudItem>
                <MudItem xs="12" md="6">
                    <InputFile id="fileInput" OnChange="UploadFiles" hidden />
                    <MudButton HtmlTag="label"
                               Variant="Variant.Text"
                               Color="Color.Primary"
                               Size="Size.Small"
                               StartIcon="@Icons.Filled.CloudUpload"
                               for="fileInput">
                        @_localizer["Upload Photo"]
                    </MudButton></MudItem>
                    <MudItem xs="1"></MudItem>
                    <MudItem xs="3">
                        <MudText>@ImageName</MudText></MudItem>
</MudGrid>
        </DialogContent>
        <DialogActions>
            <MudButton DisableElevation Variant="Variant.Filled" OnClick="Cancel">@_localizer["Cancel"]</MudButton>
            @if (AddEditDoctorModel.Id != 0)
            {
<MudButton DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Disabled="@(!Validated)" Color="Color.Secondary">@_localizer["Update"]</MudButton> }
else
{
<MudButton DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Disabled="@(!Validated)" Color="Color.Success">@_localizer["Save"]</MudButton>}
        </DialogActions>
    </MudDialog>
</EditForm>